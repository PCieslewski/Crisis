<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="com.backend.hibernate.Person" table="Person_Object2">
      <id name="id" type="int" column="id">
         <generator class="native"/>
      </id>
      <property name="birthday" column="birthday" type="string"/>
      <property name="college" column="college" type="string"/>
      <property name="major" column="major" type="string"/>
	  <property name="name" column="name" type="string"/> 
	  <property name="gatorLink" column="gatorLink" type="string"/> 
	  <property name="passwordHash" column="passwordHash" type="string"/> 
	  	
	  	<list name="friends" table="friends">
	  		<key column="id"/>
			<index column="type"/>	  		
			<element column="friends" type="string"/>
	  	</list>
	  
	  	<list name="pendingFriends" table="pendingFriends">
	  		<key column="id"/>
			<index column="type"/>	  		
			<element column="pendingFriends" type="string"/>
	  	</list>
	  	
	  	<component name="Schedule" class="com.backend.hibernate.Schedule">
	  		<list name="classList" table="Yourclass">
	            <key column="id" />
	            <list-index column="listOrder" />
	            <composite-element class="com.backend.hibernate.YourClass">
	                <property name="section" column="section" type="string"/>
	                <property name="type" column="type" type="string"/>         
					<property name="course" column="course" type="string"/>
	 				<property name="credits" column="credits" type="string"/> 	
	 				<property name="day" column="day" type="string"/>
	 				<property name="period" column="period" type="string"/>
	 				<property name="building" column="building" type="string"/>
	 				<property name="room" column="room" type="string"/>
	            </composite-element>
       		 </list>
	  	</component>
	  	
	</class>
</hibernate-mapping>